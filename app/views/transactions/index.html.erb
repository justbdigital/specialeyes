<div class='container'>

  <div class='row' >
    <div class='col-md-10 margin_up' >

    <h3>Bookings history</h3>

    <table class='table table-striped treatments margin_up'>
      <thead>
        <tr>
          <th>Title</th>
          <th>Start at</th>
          <th>Payment made</th>
          <th>Sum</th>
        </tr>
      </thead>
      <tbody>
        <% @bookings.each do |booking| %>
          <tr>
            <td><%= booking.treatment.title %></td>
            <td><%= booking.start_at.strftime("%B %d at %H:%M") %></td>
            <td><%= "paid at #{booking.updated_at}" if booking.paid %></td>
            <td><span><%= fa_icon('gbp', text:"#{booking.sum}") %></span></td>
          </tr>
        <%end%>
      </tbody>
    </table>

    </div>
  </div>

</div>
