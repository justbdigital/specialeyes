<section class="mbr-navbar mbr-navbar--freeze mbr-navbar--absolute mbr-navbar--transparent mbr-navbar--sticky mbr-navbar--auto-collapse" id="menu-74">
  <div class="mbr-navbar__section mbr-section">
    <div class="mbr-section__container container">
      <div class="mbr-navbar__container">
        
        <div class="mbr-navbar__column mbr-navbar__column--s mbr-navbar__brand">
          <span class="mbr-navbar__brand-link mbr-brand mbr-brand--inline">
            <span class="mbr-brand__logo">
              <%= link_to root_path do %>
                <%= image_tag 'salonicon.png', class: 'mbr-navbar__brand-img mbr-brand__img' %>
              <% end %>
            </span>
            <span class="mbr-brand__name">
              <%= link_to('BOOKME.SALON', root_path, class: 'mbr-brand__name text-white') %>
            </span>
          </span>
        </div>

        <div class="mbr-navbar__hamburger mbr-hamburger text-white"><span class="mbr-hamburger__line"></span></div>

        <div class="mbr-navbar__column mbr-navbar__menu">
          <nav class="mbr-navbar__menu-box mbr-navbar__menu-box--inline-right">
            <div class="mbr-navbar__column">
              <ul class="mbr-navbar__items mbr-navbar__items--right mbr-buttons mbr-buttons--freeze mbr-buttons--right btn-decorator mbr-buttons--active">

                <% if !current_user %>
                  <li class="mbr-navbar__item">
                    <%= link_to 'LOGIN as consumer', new_consumer_session_path, class: 'mbr-buttons__link btn text-white' %>
                  </li>
                  <li class="mbr-navbar__item">
                    <%= link_to 'LOGIN as pro', new_pro_session_path, class: 'mbr-buttons__link btn text-white' %>
                  </li>
                <% elsif current_user.is_a? Pro%>
                  <li class="mbr-navbar__item">
                    <%= link_to 'LOGOUT', destroy_pro_session_path, method: :delete, class: 'mbr-buttons__link btn text-white' %>
                  </li>
                <% else %>
                  <li class="mbr-navbar__item">
                    <%= link_to 'LOGOUT', destroy_consumer_session_path, method: :delete, class: 'mbr-buttons__link btn text-white' %>
                  </li>                  
                <% end %>

              </ul>
            </div>

            <div class="mbr-navbar__column">
              <ul class="mbr-navbar__items mbr-navbar__items--right mbr-buttons mbr-buttons--freeze mbr-buttons--right btn-inverse mbr-buttons--active">
                <li class="mbr-navbar__item">
                  <%= link_to 'List Your Business', root_path, class: 'mbr-buttons__btn btn btn-default' %>
                </li>
              </ul>
            </div>   
          </nav>
        </div>
  
      </div>
    </div>
  </div>
</section>
