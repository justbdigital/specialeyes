<!DOCTYPE html>
<html>
<head>
  <title>Specialeyes</title>
  <%= include_gon %>
  <%= stylesheet_link_tag    'application', media: 'all'%>
  <%= javascript_include_tag 'application' %>
  <%= javascript_include_tag "https://www.google.com/jsapi" %>
  <%= csrf_meta_tags %>

  <link rel="shortcut icon" href="assets/images/discover-mobile-350x350-16.png" type="image/x-icon">

  <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:700,400&amp;subset=cyrillic,latin,greek,vietnamese">

  <script src="//maps.google.com/maps/api/js?v=3.18&sensor=false&client=&key=&libraries=geometry&language=&hl=&region="></script> 
  <script src="//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js"></script>
  <script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/infobox/1.1.9/src/infobox_packed.js' type='text/javascript'></script> <!-- only if you need custom infoboxes -->
  <script src="https://js.braintreegateway.com/v2/braintree.js"></script>
</head>
<body>

  <% if !current_user %>
    <%= render 'layouts/header' %>
  <% elsif pro_header? %>
    <%= render 'layouts/header_pro' %>
  <% else %>
    <%= render 'layouts/header_consumer' %>
  <% end %>

  <div class='container wrapper'>
    <div class='row'>
    <% flash.each do |type, message| %>
      <div class='alert alert-warning fade-in'>
        <button class='close' data-dismiss='alert'>x</button>
        <%= message %>
      </div>
    <% end %>

  <%= yield %>

    </div>
  </div>

  <%= javascript_tag do %>

    $(document).ready(function() {
        myevents = {
          id: '1', title: 'All Day Event', start: new Date(2016, 04, 21)
        }; 

      $('#calendar').fullCalendar({
        header: {
            left: 'prev,next today',
            center: 'title',
            right: 'month,agendaDay',
            timezone: 'Europe/London',
        },

        eventSources: [{  
          url: '/bookings',  
         }],
        eventClick: function(event) {
          if (event.url) {
          document.location.href = "event.url?date=event.start";
          }
        },
      });
    });


    $(document).ready(function() {
      handler = Gmaps.build('Google');
        handler.buildMap({ provider: {zoomControl: true, mapTypeControl: false, streetViewControl: false}, internal: {id: 'map'}}, function(){
        markers = handler.addMarkers(<%=raw @hash.to_json %>);
        handler.bounds.extendWith(markers);
        handler.fitMapToBounds();
        handler.getMap().setZoom(14);
      });
    });
  <% end %>
</body>
</html>
