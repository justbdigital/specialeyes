<div class="col-lg-4 col-lg-offset-4">
  <h3>Account details</h3>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :username, required: true, autofocus: true, label: false, placeholder: 'your name' %>
      <%= f.input :business_name, required: false, autofocus: false, label: false, placeholder: 'business name' %>
      <%= f.input :email, required: true, autofocus: false, label: false, placeholder: 'email' %>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
      <% end %>

      <%= f.input :password, autocomplete: "off", hint: "leave it blank if you don't want to change it", required: false, label: false, placeholder: 'new password' %>
      <%= f.input :password_confirmation, required: false, label: false, placeholder: 'password confirmation' %>
      <%= f.input :current_password, hint: "we need your current password to confirm your changes", required: true, label: false, placeholder: 'current password' %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Update" %>
    </div>
  <% end %>

  <h3>Cancel my account</h3>

  <p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

  <%= link_to "Back", :back %>
</div>
