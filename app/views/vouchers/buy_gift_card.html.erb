<div class='col-md-8 button_down'>
  <%= simple_form_for :gift, { url: new_transaction_path, method: :get} do |f| %>
    <h3 class='form-group col-md-12 margin_down'>Buy Gift Card</h3>
    <div class='form-group col-md-5'>
      <%= f.input :amount, collection: ApplicationHelper::AMOUNTS.sort.map {|k,v| [v,k]}, required: true,  include_blank: false, input_html: { class: 'form-control'} %>
    </div>
    <div class='form-group col-md-5'>
      <%= f.input :quantity, collection: 1..15, required: true,  include_blank: false, input_html: { class: 'form-control'} %>
    </div>
    <div class='form-group col-md-10'>
      <%= f.input :message, as: :text, required: false, input_html: { class: 'form-control', rows: 10, cols: 10} %>
    </div>
    <div class='form-group col-md-10'>
      <%= f.input :email, required: true, input_html: { class: 'form-control'} %>
    </div>

    <div class='form-group col-md-7'>
      <%= f.button :submit, 'Checkout', class: 'btn btn-warning col-md-10 last_div' %>
    </div>
  <% end %>
</div>
